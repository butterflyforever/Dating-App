<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:lds = "http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    tools:context="com.example.pro.test1.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ededed"
        android:id="@+id/linearlayout_main">

        <android.support.v7.widget.Toolbar
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:background="#f00"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:id="@+id/toolbar">
                <ImageView android:layout_height="30dp" android:layout_width="30dp"

                app:srcCompat="@android:drawable/star_big_on" />

                <TextView
                    android:text="好好约会"
                    android:textSize="20dp"
                    android:textColor="#fff"
                    android:gravity="center"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tool_bar_text"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

        </android.support.v7.widget.Toolbar>

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:textAlignment="center"

            android:id="@+id/searchview">
        </SearchView>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/ListView01"
            android:cacheColorHint="#00000000"
            android:background="#ededed"
            android:divider="#ffffff"
            android:dividerHeight="10dp" />
        <!--<com.example.pro.test1.ArcMenu
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            lds:position = "right_bottom"
            lds:radius = "100dp">
        </com.example.pro.test1.ArcMenu>-->

    </LinearLayout>
        <!--<ListView android:layout_height="match_parent"
            android:layout_width="280dp"
            android:layout_gravity="start"
            android:background="#fff"
            android:divider="@null"
            android:id="@+id/lv_left_menu">

        </ListView>-->
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="280dp"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:id="@+id/lv_left">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="100dp"
            >
            <com.example.pro.test1.CircleImageView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/circle_user"
                app:srcCompat="@drawable/barrafina" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_tv"
                    android:text="李大松" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/username_tv"
                    android:text="ldsldsldslds" />
            </LinearLayout>

            <!--<com.baidu.mapapi.map.MapView
            android:id="@+id/baiDuMv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" />-->

        </LinearLayout>
